<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12">
			<% unless @categories.empty?%>
				<div class="d-flex justify-content-center py-3">
					<%= link_to("Yeni Kategori",new_category_path,class:"btn btn-warning text-center")%>
				</div>
				<table class="table table-bordered table-wrapper">
					<thead>
						<tr class="text-center table-success border border-primary">
							<th scope="col">Id</th>
							<th scope="col">Name</th>
							<td scope="col">Actions</td>
						</tr>
					</thead>
					<tbody>
						<% @categories.each do |category|%>
							<tr class="border table-primary text-center border border-success">
								<td scope="row"><%= category.id%></td>
								<td><%= category.name%></td>
								<td>
									<%= link_to("Düzenle",edit_category_path(category),class:"btn btn-warning")%>
									<%= link_to("Sil",category,class:"btn btn-danger",data: {"turbo-method" => :delete,"turbo-confirm" => "Bu kayıt silinsin mi"})%>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			<% else %>
				<div class="d-flex justify-content-center">
					<%= link_to("Yeni Kategori",new_category_path,class:"btn btn-warning text-center")%>
				</div>
			<% end %>
		</div>
	</div>
</div>