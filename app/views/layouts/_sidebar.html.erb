<%= stylesheet_link_tag "_sidebar", "data-turbo-track": "reload" %>
<div class="sidebar text-center mt-5 pt-5" id="sidebar">
    <h3 class="p-3">Categories</h3>
    <div class="categories">
        <ul class="list-group">
          <% get_categories.each do |key,val|%>
              <li class="list-group-item">
                  <%= link_to(
                    pages_category_path(string_to_url(key)),
                    class:"d-flex justify-content-between text-decoration-none text-dark") do %>
                    <%= key %> <strong><%= val%></strong>
                  <% end %>
              </li>
            <%end%>
    </div>
    <hr>
    <h3 class="p-3">Tags</h3>
    <div class="tags">
        <ul class="list-group">
          <% get_tags.each do |key,val|%>
              <li class="list-group-item">
                <%= link_to(
                  pages_tag_path(string_to_url(key)),
                  class:"d-flex justify-content-between text-decoration-none text-dark") do
                %>  
                    <%= key %> <strong><%= val%></strong>
                  <% end %>
              </li>
            <%end%>
        </ul>
    </div> 
</div>

<script>
    var toggleButton = document.getElementById('sidebarToggle');
    var sidebar = document.getElementById('sidebar');

    toggleButton.addEventListener('click', () => {
        sidebar.classList.toggle('active');
    });
    <%#TODO bu kısmı stimulus ile tekrar yaz%>
</script>
