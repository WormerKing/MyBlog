<%= form_for(@aboutme) do |form| %>
  <div class="row">
    <h3 class="text-center pt-4 text-dark">Hakkımda düzenle</h3>
  </div>
  <div class="row pt-3 mx-3">
    <div class="col-sm-12 py-2 text-start px-3">
      <%= form.text_area(
        :body,
        class: "form-control fs-4 text-area",
        value: @aboutme.body,
        required: "",
      ) %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
      <%= render "shared/dropzone",
      form: form,
      source: :profile_photo,
      multiple: false,
      max_files: 1,
      filename: @filename,
      file_size: @file_size,
      image_url: @image_url %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
      <input type="submit" value="Güncelle" class="btn btn-primary my-4">
    </div>
  </div>
<% end %>
