<%= render "layouts/sidebar"%>
<div class="container-lg p-5 mt-5" style="padding-left:2rem;">
  <div class="row text-wrap">
    <h2 class="text-center fw-bold fs-1 text-capitalize">
      <%= @article.title%>
    </h2>
  </div>
  <div class="row text-wrap">
    <div class="col-sm-12 d-flex justify-content-between align-items-center">
      <div>
        <h3 class="d-inline my-1">Kategori: </h3>
        <%= link_to(
          @article.category.name,
          pages_category_path(string_to_url(@article.category.name)),
          class: "btn btn-primary fs-5 text-center text-capitalize"
        )%> 
      </div>
      <p>
        <span class="text-danger fs-5">
          Eklenme Tarihi:
          <%= tr_humanize(@article.created_at)%>
        </span>
      </p>
    </div>
  </div>
  <div class="row text-wrap py-2">
    <div class="col-sm-12">
      <h3 class="d-inline my-1 text-center pt-3">Etiketler: </h3>
      <% @article.tags.each do |tag|%>
        <%= link_to(
          tag.title,
          pages_tag_path(string_to_url(tag.title)),
          class: "btn btn-danger fs-6 text-capitalize my-1"
        )%>
      <% end %>
    </div>
  </div>
  <div class="row text-wrap py-2">
    <p><%= @article.view_count%> görüntülenme</p> 
  </div>
  <hr>
  <div class="row pt-5 py-3 text-wrap">
    <p class="fw-bold fs-4">
      <%= @article.header%>
    </p>
  </div>

  <div class="row text-wrap">
    <p class="fs-5 fw-medium">
      <%= @article.body%>
    </p>
  </div>
</div>
