<%= stylesheet_link_tag "aboutme", "data-turbo-track": "reload" %>
<div class="pt-5 area vh-75">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 rounded-3 d-flex flex-row justify-content-center">
				<div class="border border-info my-5 rounded-2 bg-primary-subtle tasiyici">
					<%= form_for(@aboutme) do |form|%>
						<div class="row">
							<h3 class="text-center pt-4 text-dark">Hakkımda düzenle</h3>
						</div>
						<div class="row pt-3 mx-3">
							<div class="col-sm-12 py-2 text-start px-3">
								<%= form.text_area(:body,class:"form-control fs-4 text-area",value:@aboutme.body,required:"")%>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12 d-flex justify-content-center">
								<input type="submit" value="Güncelle" class="btn btn-primary mt-4">
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
